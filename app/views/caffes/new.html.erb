<span class="container text-danger">
<%if @caffe.errors.any? %>
  <%= @caffe.errors.count%>件のエラーが発生しました
  <ul class="list-unstyled">
    <% @caffe.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>
</span>

<%= form_with model: @caffe, local: true do |f| %>
  <div>画像</div>
  <div><%= f.attachment_field :image %></div>
  <div class="pt-3">ショップネーム</div>
  <%= f.text_field :shop_name %>
  <div class="pt-3">キャプション</div>
  <%= f.text_area :caption %>
  <div class="pt-3">
  <%= f.submit "投稿" %>
  </div>
  
<% end %>

